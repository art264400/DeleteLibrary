<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title – приложение ASP.NET</title>*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="dws-menu">
    <ul>
        <li>@Html.ActionLink("Свободные книги", "ListFreeBooks", "Library")</li>
        <li>@Html.ActionLink("Книги у меня", "ListMyBooks", "Library")</li>
        <li>@Html.ActionLink("Забронированные книги", "ListReservedMyBooks", "Library")</li>
        <li>@Html.ActionLink("Выйти", "Logout", "Account")</li>
        <li>@Html.ActionLink("Все пользователи", "ListUsers", "Admin").If(User.IsInRole("Admin"))</li>
        <li>@Html.ActionLink("Все книги", "Index", "Admin").If(User.IsInRole("Admin"))</li>
        <li>@Html.ActionLink("Книги у пользователей", "ListTakenBooks", "Admin").If(User.IsInRole("Admin"))</li>
    </ul>
</nav>
<div class="container body-content">
    @RenderBody()
    <hr />

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>